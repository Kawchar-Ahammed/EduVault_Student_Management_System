<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
   <center>
      <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #ecf0f1;">
         <padding>
            <Insets top="50" right="50" bottom="50" left="50" />
         </padding>
         
         <VBox alignment="CENTER" spacing="30" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" maxWidth="400">
            <padding>
               <Insets top="40" right="40" bottom="40" left="40" />
            </padding>
            
            <!-- Header -->
            <VBox alignment="CENTER" spacing="10">
               <Label text="Academic Management System" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
               <Label text="Welcome! Please sign in to continue." style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
            </VBox>
            
            <!-- Login Form -->
            <VBox spacing="15">
               
               <!-- Username Field -->
               <VBox spacing="5">
                  <Label text="Username:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" />
                  <TextField fx:id="usernameField" promptText="Enter your username" 
                           style="-fx-pref-height: 35; -fx-font-size: 14px;" />
               </VBox>
               
               <!-- Password Field -->
               <VBox spacing="5">
                  <Label text="Password:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" />
                  <PasswordField fx:id="passwordField" promptText="Enter your password" 
                               style="-fx-pref-height: 35; -fx-font-size: 14px;" />
               </VBox>
               
               <!-- Role Selection -->
               <VBox spacing="5">
                  <Label text="Role:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" />
                  <ComboBox fx:id="roleComboBox" promptText="Select your role" 
                          style="-fx-pref-height: 35; -fx-font-size: 14px;" prefWidth="320" />
               </VBox>
               
               <!-- Error Message -->
               <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;" visible="false" />
               
               <!-- Login Button -->
               <Button fx:id="loginButton" text="Sign In" onAction="#handleLogin" 
                     style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-pref-height: 40;" 
                     prefWidth="320" defaultButton="true" />
               
            </VBox>
            
         </VBox>
         
      </VBox>
   </center>
   
   <bottom>
      <HBox alignment="CENTER" style="-fx-background-color: #34495e; -fx-padding: 15;">
         <Label text="EduVault Student Management System Â© 2025" style="-fx-text-fill: white; -fx-font-size: 12px;" />
      </HBox>
   </bottom>
</BorderPane>
